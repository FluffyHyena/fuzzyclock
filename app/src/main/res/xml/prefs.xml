<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="fontSize"
            android:title="@string/pref_title_fontSize"
            android:defaultValue="36"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1"/>

    <EditTextPreference
            android:key="maxTranslationDisplacement"
            android:title="@string/pref_title_maxTranslationDisplacement"
            android:defaultValue="0.1"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:maxLines="1"/>

    <EditTextPreference
            android:key="updateSeconds"
            android:title="@string/pref_title_updateSeconds"
            android:defaultValue="60"
            android:selectAllOnFocus="true"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:theme="@style/AppTheme"
            android:maxLines="1"/>

    <ListPreference
            android:key="language"
            android:title="@string/pref_title_language"
            android:defaultValue="0"
            android:entries="@array/pref_list_languages_titles"
            android:entryValues="@array/pref_list_languages_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>

</PreferenceScreen>
