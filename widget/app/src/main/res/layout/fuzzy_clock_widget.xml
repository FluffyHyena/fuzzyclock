                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin">

    <ImageView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
